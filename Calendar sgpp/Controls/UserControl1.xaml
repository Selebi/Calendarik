<UserControl x:Class="PlanSelector.Controls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanSelector.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <RadioButton Content="Годовой" Style="{StaticResource dateRadioStyle}"/>
        <RadioButton Content="Квартальный" Style="{StaticResource ResourceKey=dateRadioStyle}" Grid.Column="1"/>
        <RadioButton Content="Месячный" Style="{StaticResource ResourceKey=dateRadioStyle}" Grid.Column="2"/>
    </Grid>
</UserControl>

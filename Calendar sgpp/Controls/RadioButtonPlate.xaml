<UserControl x:Class="PlanSelector.Controls.RadioButtonPlate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanSelector.Controls"
             mc:Ignorable="d" Cursor="Hand" 
             MouseEnter="MouseEnterEvent" MouseLeave="MouseLeaveEvent"
             MouseDown="MouseDownEvent"
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid Background="White" Height="{Binding Height}" Width="{Binding Width}">
        <Border Width="0" Height="0" x:Name="MouseOverBorder" Background="{Binding MouseOverBrush}" />
        <Border Width="0" Height="0" x:Name="SelectBorder" Background="{Binding SelectBrush}"/>
        <TextBlock x:Name="Textblock" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Text}" FontSize="{Binding FontSize}" />
    </Grid>
</UserControl>
